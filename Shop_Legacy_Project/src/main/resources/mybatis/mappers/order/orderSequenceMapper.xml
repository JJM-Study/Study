<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shoplegacy.order.mapper.OrderSequenceMapper">

    <select id="selectForUpdate" resultType="int" parameterType="java.util.Date">
        SELECT seq_no
        FROM order_sequence
        WHERE seq_date = #{seq_date}
        FOR UPDATE
    </select>

    <insert id="insertSequence" parameterType="map">
        INSERT INTO order_sequence (seq_date, seq_no)
        VALUES (#{seq_date}, #{seq_no})
    </insert>

    <insert id="updateSequence" parameterType="java.util.Date">
        UPDATE order_sequence
        SET seq_no = seq_no + 1
        WHERE seq_date = #{seq_date}
    </insert>

</mapper>
